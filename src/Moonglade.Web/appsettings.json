{
  "ConnectionStrings": {
    "MoongladeDatabase": "Server=localhost;Port=3306;Database=MoongladePure;uid=moongladepure;Password=YOUR_STRONG_PASSWORD;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ImageStorage": {
    "AllowedExtensions": [ ".png", ".jpg", ".jpeg", ".bmp", ".gif" ],
    "FileSystemPath": "/mnt/datastore"
  },
  "CacheSlidingExpirationMinutes": {
    "Post": 20,
    "Page": 20,
    "Image": 60
  },
  "SiteMap": {
    "ChangeFreq": {
      "Posts": "monthly",
      "Pages": "monthly",
      "Default": "weekly"
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "POST:/api/comment",
        "Period": "1s",
        "Limit": 2
      },
      {
        "Endpoint": "GET:/api/comment/list/*",
        "Period": "1s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/post/*",
        "Period": "1s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/statistics",
        "Period": "1s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/image/*",
        "Period": "1s",
        "Limit": 20
      }
    ]
  },
  "AllowedHosts": "*"
}
