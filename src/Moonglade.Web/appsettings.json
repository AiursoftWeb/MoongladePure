{
  "ConnectionStrings": {
    "MoongladeDatabase": "Server=(localdb)\\MSSQLLocalDB;Database=Moonglade;Trusted_Connection=True;",
  },
  "Authentication": {
    "Provider": "Local"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning"
    }
  },
  "ReleaseCheckApiAddress": "https://api.github.com/repos/EdiWang/Moonglade/releases/latest",
  "ImageStorage": {
    "AllowedExtensions": [ ".png", ".jpg", ".jpeg", ".bmp", ".gif" ],
    "FileSystemPath": "/mnt/datastore"
  },
  "FeatureManagement": {
    "Foaf": true,
    "OPML": true,
    "Menu_Categories": true,
    "Menu_Tags": true,
    "Menu_Archive": true
  },
  "Editor": "HTML",
  "CacheSlidingExpirationMinutes": {
    "Post": 20,
    "Page": 20,
    "Image": 60
  },
  "SiteMap": {
    "ChangeFreq": {
      "Posts": "monthly",
      "Pages": "monthly",
      "Default": "weekly"
    }
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "POST:/api/comment",
        "Period": "1s",
        "Limit": 2
      },
      {
        "Endpoint": "GET:/api/comment/list/*",
        "Period": "1s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/post/*",
        "Period": "1s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/statistics",
        "Period": "1s",
        "Limit": 5
      },
      {
        "Endpoint": "*:/image/*",
        "Period": "1s",
        "Limit": 20
      }
    ]
  },
  "AllowedHosts": "*"
}
